package Java8Features;

import java.util.*;

public class EvenNumbersUsingStreams {

	public static void main(String[] args) {
     List<Integer> li = new ArrayList<>();
     for(int i=0;i<=10;i++) {
    	 li.add(i);
     }
     System.out.println(li);
     List<Integer> li1 = new ArrayList<>();
     for(Integer i : li) {
 		if(i%2==0) {
 			li1.add(i)
 		}
 	}
     System.out.println(li1);
	}
	
}
